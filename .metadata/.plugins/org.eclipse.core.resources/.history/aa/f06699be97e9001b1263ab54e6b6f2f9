package sec7_OrientacaoObjeto.heranca.desafioHeranca;

public class Carro {
	
	final int VELOCIDADE_MAXIMA;
	
	Carro(int VEL_MAX){
		this.VELOCIDADE_MAXIMA = VEL_MAX;
	}
	
	double velocidadeAtual = 0.0;
	
	boolean acelerar() {
		
		velocidadeAtual+=5.0;
		return true;
	}
	
	boolean frear() {
		
		if(velocidadeAtual<=0.0){
			velocidadeAtual=0.0;
			return false;
		}
		velocidadeAtual-=5.0;
		return true;
	}

}
