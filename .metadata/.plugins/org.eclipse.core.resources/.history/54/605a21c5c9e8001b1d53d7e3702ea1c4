package sec7_OrientacaoObjeto.composicao;

public class Carro {
	
	Motor motor = new Motor();//1 para 1
	
	void acelerar() {
		
		if(motor.fatorInjecao<3.6){			
			motor.fatorInjecao += 0.4;
		}
		
	}
	
	void frear() {
		
		if(motor.fatorInjecao>0.5) {			
			motor.fatorInjecao -= 0.4;
		}
	}
	
	void ligar() {
		motor.ligado=true;
	}
	
	void desligar() {
		motor.ligado=false;
	}
	
	boolean isLigado() {
		return motor.ligado;
	}
}
