package sec7_OrientacaoObjeto.heranca;

public class Jogador {
	
	int x;
	int y;
	
	boolean andar(Direcao d) {
		
		if(d == Direcao.NORTE) {
			y++;
			return true;
		}
		
		if(d == Direcao.LESTE) {
			x++;
			return true;
		}
		
		if(d == Direcao.SUL) {
			y--;
			return true;
		}
		
		if(d == Direcao.OESTE) {
			x--;
			return true;
		}
		return false;
	}
	
	
}
